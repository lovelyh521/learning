{
  "swagger": "2.0",
  "info": {
    "description": "定义兴趣小组的API接口",
    "version": "1.0.0",
    "title": "Interest Group API"
  },
  "basePath": "/v1",
  "tags": [{
    "name": "auth",
    "description": "登录认证接口"
  },{
    "name": "user",
    "description": "用户管理接口"
  }],
  "schemes": [
    "http"
  ],
  "paths": {
    "/authenticate": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "登录",
        "description": "",
        "operationId": "auth",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [{
          "in": "body",
          "name": "body",
          "description": "传入用户名和密码进行登录操作",
          "required": true,
          "schema": {
            "$ref": "#/definitions/auth_info"
          }
        }],
        "responses": {
          "result": {
            "description": "返回值",
            "schema": {
              "type": "object",
              "properties": {
                "retcode": {
                  "type": "integer",
                  "description": "返回码，0成功，其他失败."
                },
                "data": {
                  "type": "string",
                  "description": "具体的结果."
                }
              }
            }
          }
        }
      }
    },
    "/logout": {
      "delete": {
        "tags": [
          "auth"
        ],
        "summary": "退出",
        "description": "用户执行退出操作",
        "operationId": "auth",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "result": {
            "description": "返回值",
            "schema": {
              "type": "object",
              "properties": {
                "retcode": {
                  "type": "integer",
                  "description": "返回码，0成功，其他失败."
                },
                "data": {
                  "type": "string",
                  "description": "具体的结果."
                }
              }
            }
          }
        }
      }

    },
    "/user/{userid}":{
      "get": {
        "tags": [
          "user"
        ],
        "summary": "查询某个用户信息",
        // "description": "Returns a single pet",
        "operationId": "queryUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "description": "返回指定ID的用户",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "result": {
            "description": "查询结果",
            "schema": {
              "type": "object",
              "properties": {
                "retcode": {
                  "type": "integer",
                  "description": "返回码，0成功，其他失败."
                },
                "data": {
                  "$ref": "#/definitions/User",
                  "description": "具体的结果."
                }
              }
            }
          }
        }
      }
    }

  },
  
  "definitions": {    
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "userStatus": {
          "type": "integer",
          "format": "int32",
          "description": "User Status"
        }
      }      
    },   
    "auth_info": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string",
          "minLength": 3,
          "maxLength": 20
        },
        "password": {
          "type": "string",
          "minLength": 3,
          "maxLength": 20
        },
      }
    }
  }
}